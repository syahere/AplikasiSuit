<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/ivTitle"
        android:layout_width="195dp"
        android:layout_height="174dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/splashscreen1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_marginTop="327dp"
        android:layout_marginBottom="123dp"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTitle"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="282dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:id="@+id/tvPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/player1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/kertas_left"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:scaleX="-1"
                android:src="@drawable/kertas" />

            <ImageView
                android:id="@+id/gunting_left"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:scaleX="-1"
                android:src="@drawable/gunting" />

            <ImageView
                android:id="@+id/batu_left"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:scaleX="-1"
                android:src="@drawable/batu" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivResult"
            android:layout_width="158dp"
            android:layout_height="148dp"
            android:src="@drawable/versus" />

        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:id="@+id/tvRival"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/kertas_right"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/kertas" />

            <ImageView
                android:id="@+id/gunting_right"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/gunting" />

            <ImageView
                android:id="@+id/batu_right"
                android:layout_width="52dp"
                android:layout_height="56dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/batu" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>